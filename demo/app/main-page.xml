<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" 
  xmlns:ui="nativescript-mrz-reader">
  <ScrollView>
    <StackLayout>
      <Button class="m-b-10 btn btn-primary" text="Scan" tap="onScanButtonTap"></Button>
      <Label class="m-x-10 m-b-10 h3" text="{{ value }}" textWrap="true"></Label>
      <Image class="m-x-10" src="{{ image }}" stretch="aspectFill"></Image>
    </StackLayout>
  </ScrollView>
</Page>